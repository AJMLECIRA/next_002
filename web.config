      <error statusCode="404" path="C:\HostingSpaces\admin\mirrorworld-uk.co.uk\error_docs\not_found.html" />
      <remove statusCode="405" />
      <error statusCode="405" path="C:\HostingSpaces\admin\mirrorworld-uk.co.uk\error_docs\method_not_allowed.html" />
