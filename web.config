      <error statusCode="503" path="C:\HostingSpaces\admin\mirrorworld-uk.co.uk\error_docs\maintenance.html" />
    </httpErrors>
    <tracing>
            <traceFailedRequests>
                <clear />
            </traceFailedRequests>
        </tracing>
        <rewrite>
            <rules>
                <!-- Rule for Redirecting HTTP to HTTPS -->
                <rule name="Redirect to HTTPS" stopProcessing="true">
                    <match url="(.*)" />
                    <conditions>
                        <add input="{HTTPS}" pattern="off" ignoreCase="true" />
                    </conditions>
                    <action type="Redirect" url="https://mirrorworld-uk.co.uk/{R:1}" redirectType="Permanent" />
                </rule>
                <!-- Reverse Proxy to http://localhost:3000 -->
                <rule name="ReverseProxyInboundRule1" stopProcessing="true">
                    <match url="(.*)" />
                    <action type="Rewrite" url="http://localhost:3000/{R:1}" />
                </rule>
            </rules>
        </rewrite>
    </system.webServer>
    <system.web>
        <compilation tempDirectory="C:\HostingSpaces\admin\mirrorworld-uk.co.uk\tmp" />
    </system.web>
</configuration>